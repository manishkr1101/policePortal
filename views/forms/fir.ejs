<%- include('partials/header') %>

<div class="container">
  <h1>FIR Details</h1>
  <div class="row">
    <form action="/form/fir" method="POST" enctype="multipart/form-data">
      <fieldset>
        <legend>
          <h2>Personal Details</h2>
        </legend>
        <div class="row">
          <div class="col s6">
            <div class="input-field">
              <i class="material-icons prefix">person</i>
              <input id="name" type="text" name="name" />
              <label for="name">Name</label>
            </div>

            <div class="input-field">
              <i class="material-icons prefix">email</i>
              <input id="email" type="email" name="email" />
              <label for="email">Email</label>
            </div>

            <div class="input-field">
              <i class="material-icons prefix">date_range</i>
              <input id="dob" type="text" class="datepicker" name="dob" />
              <label for="dob">Date Of Birth</label>
            </div>
          </div>
          <div class="col s6">
            <div class="input-field">
              <i class="material-icons prefix">wc</i>
              <select name="sex">
                <option value="" disabled selected>Choose your option</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="other">Other</option>
              </select>
              <label>Sex</label>
            </div>

            <div class="input-field">
              <i class="material-icons prefix">phone</i>
              <input id="mobile" type="tel" name="phone" />
              <label for="mobile">Phone Number</label>
            </div>

            <div class="input-field">
              <i class="material-icons prefix">vpn_key</i>
              <input id="otp" type="number" maxlength="6" name="otp" />
              <label for="otp">OTP</label>
            </div>
          </div>
        </div>
      </fieldset>

      <fieldset>
        <legend>
          <h2>Address Details</h2>
        </legend>
        <div class="row">
          <h5>&nbsp;&nbsp;Present Address</h5>
          <div class="col s6">
            <div class="input-field">
              <i class="material-icons prefix">location_city</i>
              <input id="Village/Town/City1" type="text" name="city" />
              <label for="Village/Town/City1">Village/Town/City</label>
            </div>

            <div class="input-field">
              <i class="material-icons prefix">business</i>
              <select name="district">
                <option value="" disabled selected>Choose your District</option>
              </select>
              <label>District</label>
            </div>
          </div>
          <div class="col s6">
            <div class="input-field">
              <i class="material-icons prefix">home_work</i>
              <select name="state">
                <option value="" disabled selected>Choose your State</option>
                <option value="Andhra">Andhra</option>
                <option value="Bihar">Bihar</option>
                <option value="other">Other</option>
              </select>
              <label>State</label>
            </div>

            <div class="input-field">
              <i class="material-icons prefix">local_convenience_store</i>
              <select name="ps">
                <option value="" disabled selected
                  >Choose your Police Station</option
                >
              </select>
              <label>Police Station</label>
            </div>
          </div>
        </div>
        <div class="row">
          <p>
            <label>
              <input
                id="same-address"
                type="checkbox"
                class="filled-in"
                name="isSameAddr"
              />
              <span
                >If Permanent address is same as Present address then click on
                the check box</span
              >
            </label>
          </p>
        </div>
        <div class="row">
          <h5>&nbsp;&nbsp;Permanent Address</h5>
          <div class="col s6">
            <div class="input-field">
              <i class="material-icons prefix">location_city</i>
              <input id="Village/Town/City2" type="text" name="permCity" />
              <label for="Village/Town/City2">Village/Town/City</label>
            </div>

            <div class="input-field">
              <i class="material-icons prefix">business</i>
              <select name="permDistrict">
                <option value="" disabled selected>Choose your District</option>
              </select>
              <label>District</label>
            </div>
          </div>
          <div class="col s6">
            <div class="input-field">
              <i class="material-icons prefix">home_work</i>
              <select name="permState">
                <option value="" disabled selected>Choose your State</option>
                <option value="Andhra">Andhra</option>
                <option value="Bihar">Bihar</option>
                <option value="other">Other</option>
              </select>
              <label>State</label>
            </div>

            <div class="input-field">
              <i class="material-icons prefix">local_convenience_store</i>
              <select name="permPs">
                <option value="" disabled selected
                  >Choose your Police Station</option
                >
              </select>
              <label>Police Station</label>
            </div>
          </div>
        </div>
      </fieldset>

      <fieldset>
        <legend>
          <h2>FIR Details</h2>
        </legend>
        <div class="row">
          <div class="col s6">
            <div class="input-field">
              <select name="natureOfComplaint">
                <option value="" disabled selected>Choose your option</option>
                <option value="Theft/Robbery">Theft/Robbery</option>
                <option value="Murder/Attempt to Murder"
                  >Murder/Attempt to Murder</option
                >
                <option value="Narcotics/Drugs">Narcotics/Drugs</option>
                <option value="Physical/Sexual Abuse"
                  >Physical/Sexual Abuse</option
                >
                <option value="Financial Fraud">Financial Fraud</option>
                <option value="Child Abuse/POCSO">Child Abuse/POCSO</option>
              </select>
              <label>Nature of Complaint</label>
            </div>
            <div class="input-field">
              <p>
                <label>Select Type of Victim</label>
                <label>
                  <input
                    id="type-of-victim1"
                    class="with-gap"
                    name="typeOfVictim"
                    type="radio"
                    value="1"
                  />
                  <span>Present</span>
                </label>
                <label>
                  <input
                    id="type-of-victim2"
                    class="with-gap"
                    name="typeOfVictim"
                    type="radio"
                    value="0"
                  />
                  <span>Not Present</span>
                </label>
              </p>
            </div>
            <div class="input-field">
              <textarea
                id="textarea1"
                class="materialize-textarea"
                name="content"
              ></textarea>
              <label for="textarea1">FIR Content</label>
            </div>
            <div class="input-field">
              <p>
                <label>Occurence Place Known</label>
                <label>
                  <input
                    id="place-of-occur1"
                    class="with-gap"
                    name="occurencePlaceKnown"
                    type="radio"
                    value="1"
                  />
                  <span>Yes</span>
                </label>
                <label>
                  <input
                    id="place-of-occur2"
                    class="with-gap"
                    name="occurencePlaceKnown"
                    type="radio"
                    value="0"
                  />
                  <span>No</span>
                </label>
              </p>
            </div>
          </div>
          <div class="col s6">
            <div class="input-field">
              <select name="crimeSubType">
                <option value="" disabled selected>Choose your option</option>
                <option value="Other">Other</option>
                <option value="NA">NA</option>
                <option value="Theft">Theft</option>
              </select>
              <label>Crime sub type</label>
            </div>
          </div>
        </div>
      </fieldset>
      <legend>
        <h2>Upload Signature</h2>
      </legend>
      <fieldset>
        <div class="row">
          <div class="col s6">
            <div class="file-field input-field">
              <div class="btn">
                <span>File</span>
                <input type="file" required name="signature" />
              </div>
              <div class="file-path-wrapper">
                <input class="file-path validate" type="text" />
              </div>
            </div>
          </div>
        </div>
      </fieldset>
      <div class="save">
        <button class="btn waves-effect waves-light" type="submit">
          Submit
          <i class="material-icons right">send</i>
        </button>
        <button class="btn waves-effect waves-light" type="reset">
          Reset
          <i class="material-icons right"></i>
        </button>
      </div>
    </form>
  </div>
</div>

<aside>
  <div id="modal1" class="modal">
    <div class="modal-content">
      <h4>Warning</h4>
      <p>An OTP will be sent on number <span class="number"></span></p>
    </div>
    <div class="modal-footer">
      <button class="modal-close waves-effect waves-green btn-flat">
        Cancel
      </button>
      <button
        class="modal-close waves-effect waves-green btn-flat"
        onclick="sendOTP()"
      >
        Send
      </button>
    </div>
  </div>
</aside>

<%- include('partials/footer') %>
<script src="/js/forms/fir.js"></script>
