<%- include('partials/header') %>

<body>
  <div class="container">
    <!-- <i class="material-icons avatar light-blue-text text-darken-3">account_circle</i> -->
    <div class="avatar">
      <img src="images/logo.jpg" alt="logo" />
    </div>
    <form action="/login" method="post">
      <div class="input-field">
        <i class="material-icons prefix">person</i>
        <input id="username" type="text" name="username" />
        <label for="username">Username</label>
        <!-- <span class="helper-text" data-error="Enter valid Email" data-success="Correct"></span> -->
      </div>
      <div class="input-field">
        <i class="material-icons prefix">fingerprint</i>
        <input id="password" type="password" name="password" />
        <label for="password">Password</label>
      </div>

      <button
        class="btn waves-effect waves-light light-blue darken-4"
        type="submit"
        name="action"
      >
        Login
        <i class="material-icons right">send</i>
      </button>
    </form>
    <div class="links">
      <span>Don't have an account. <a href="/signup">Signup</a></span>
    </div>
  </div>
</body>

<%- include('partials/footer') %>
