<%- include('partials/header') %>

<section>
  <div class="header">
    <h1>List of FIRs</h1>
  </div>
  <div class="inputs container">
    <div class="row">
      <form action="" method="post" enctype="multipart/form-data">
        <div class="name col s4">
          <div class="input-field">
            <i class="material-icons prefix">search</i>
            <input
              placeholder="Search by FIR number"
              id="query"
              type="search"
              class="validate"
            />
          </div>
        </div>
        <div class="col s2">
          <button
            class="btn waves-effect waves-light submit-btn"
            type="submit"
            name=""
          >
            Search
            <i class="material-icons right">arrow_forward</i>
          </button>
        </div>
      </form>

      <div class="col s2">
        <a href="/form/fir" class="btn waves-effect waves-light submit-btn"  name="">
          Add FIR
          <i class="material-icons right">add</i>
        </a>
      </div>
    </div>
  </div>
  <div class="fir-list">
    <div class="row">
      <table class="striped highlight">
        <thead>
          <tr>
            <th>S.No.</th>
            <th>FIR no.</th>
            <th>Name</th>
            <th>Gender</th>
            <th>Phone No.</th>
            <th>Status</th>
            <th>View</th>
          </tr>
        </thead>

        <tbody>
          <% for(let fir of firs){ %>
          <tr>
            <td></td>
            <td><%= fir['fir-no'] %></td>
            <td><%= fir.complainant['name'] %></td>
            <td><%= fir.complainant['sex'] %></td>
            <td><%= fir.complainant['phone'] %></td>
            <td><%= fir['status'] %></td>
            <td><a href="/fir/<%= fir['fir-no'] %>">view</a></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
